@import "bourbon";
@import url(http://fonts.googleapis.com/css?family=Open+Sans:400,700);
@import url(http://fonts.googleapis.com/css?family=Cabin);

@mixin fonts{
  font: {
    family:  'Open Sans', Helvetica, sans-serif;
    size: 11pt;
	}
}


@mixin message_paras{
  background: {
    position: 5px center;
    repeat: no-repeat;
	}
  padding: 0.3em 0.5em;
  padding-left: 35px;
  min-height: 25px;
}

body{
  @include fonts;
  margin: 0;
  padding: {
    top: 0;
	}
  text-align: center;
  width: auto;
}

#{$all-text-inputs}, textarea, select {
  font: {
    family: 'Cabin';
    size: inherit;
	}
  padding: 0.3em
}

html {
  @extend body;
}

div{
  position: relative;

  &#wrapper {
    border: 2px solid #DDD;
      left: {
        width: 4px
			}
      right: {
        width: 4px	
			}
    display: block;
    height: 100%;
    padding: 0.5em {
      top: 0
		}
    margin: 0 auto;
    text-align: left;
    width: 1024px;



    header {
      @include background-image( linear-gradient( #CD2626, #330000) );
			border-bottom: 1px solid #330000;
      display: block;
      margin: 0 -0.5em 0 -0.5em;
      padding-top: 0;

      h1 {
        color: #FFF;
        line-height: 2.2;
        margin-top: 0;
        padding: {
          left: 0.3em;
          right: 0.3em;
				}
			}
		}
	}

  &#body{
    display: block;
		margin-top: 0;
		padding-top: 0.2em;

    div{
      &#left_column{
				margin: {
          left: 0;
					top: 0;
				}
				padding: 0.7em;
        width: 20%;
			}
			
      &#right_column{
        border-left: 2px solid #CCC;
				float: right;
        margin: {
          left: 16%;
          right: 0;
					top: 0;
				}
        padding: 0.7em;
				width: 70%;
			}
		}
	}
}



p {
  &.warning{
    @include message_paras;
    background: {
      color: #FFCCCC;
		}
    border: 1px solid #D44942;
	}

  &.notice {
    @include message_paras;
    background: {
      color: #E8F1D4;
      image: url( <%= image_path( 'save_24x24.png' ) %> );
		}
    border: 1px solid #A2C257;
	}
}
button, a.button {
  @include button(simple, #8B3626);
  font-size: 9pt;
}

input[type=submit], input[type=button] {
  @include button(simple, #A2C257);
  font-size: 9pt;
}

