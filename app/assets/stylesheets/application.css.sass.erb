@mixin message_paras
	background:
		position: 5px center
		repeat: no-repeat
	padding: 0.3em 0.5em
	padding-left: 35px
	min-height: 25px

body
	font:
		family:  "Trebuchet MS", Helvetica, sans-serif
		size: 10pt
	margin: 0
	padding:
		top: 0
	text:
		align: center
	
	width: auto

html 
	@extend body
		
div
	position: relative
	
	&#wrapper
		border: 2px solid #DDD
			left:
				width: 4px
			right:
				width: 4px	
		display: block
		height: 100%
		padding: 0.5em
			top: 0
		margin: 0 auto
		text:
			align: left
		width: 1024px
		
		
		header
			background:
				color: #FAFAD2
			border: none
			display: block
			margin:
				top: 0
				left: -0.5em
				right: -0.5em
			padding-top: 0

			h1
				color: #734A12
				line-height: 2.2
				margin-top: 0
				padding:
					left: 0.3em
					right: 0.3em
	
	&#body
		display: block

p
	&.warning
		@include message_paras
		background:
			color: #FFCCCC
		border: 1px solid #D44942
	
	&.notice
		@include message_paras
		background:
			color: #E8F1D4
			image: url( <%= image_path( 'saved_simple.png' ) %> )
		border: 1px solid #A2C257
